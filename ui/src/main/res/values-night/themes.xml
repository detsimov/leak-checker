<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LeakChecker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray</item>
        <item name="colorPrimaryVariant">@color/gray_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gray_dark</item>
        <item name="colorSecondaryVariant">@color/gray</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:textColor">@color/gray</item>
        <!-- Customize your theme here. -->
        <item name="colorBottomNavigationBackground">@color/dark_super_light</item>
        <item name="colorActivatedIconBottomNavigation">@color/gray</item>
        <item name="colorDeactivatedIconBottomNavigation">@color/super_gray</item>
        <item name="colorGlobalBackground">@color/dark</item>
        <item name="colorBackgroundList">@color/dark_light</item>
        <item name="colorError">@color/red_200</item>
    </style>


    <style name="TextAppearance.Error" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?colorError</item>
    </style>


</resources>